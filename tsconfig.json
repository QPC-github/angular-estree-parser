{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@angular/compiler/esm2015/src/*": [
        "./node_modules/@angular/compiler/src/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
